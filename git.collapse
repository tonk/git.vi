len="${GIT_LEN:-66}"
spc="$(printf "%80s" "")"
sed -e 's!\([[:space:]]*\$[H]ash::\).*\$:!\1 '"${spc:0:${len}}"'\$:!'	\
	-e 's!\([[:space:]]*\$[I]d:\).*\$!\1\$!'							\
	-e 's!\([[:space:]]*\$[N]SId:\).*\$!\1\$!'							\
	-e 's!\([[:space:]]*\$[Pp]uppet:\).*\$!\1\$!'
